# Program to calculate the total cost of a meal

def main():
    # Get the charge for the food from the user
    food_charge = float(input("Enter the charge for the food: $"))

    # Calculate the tip (18%)
    tip = food_charge * 0.18

    # Calculate the sales tax (7%)
    sales_tax = food_charge * 0.07

    # Calculate the total amount
    total_amount = food_charge + tip + sales_tax

    # Display the results
    print(f"\nReceipt:")
    print(f"Food Charge:       ${food_charge:.2f}")
    print(f"Tip (18%):         ${tip:.2f}")
    print(f"Sales Tax (7%):    ${sales_tax:.2f}")
    print(f"Total Amount:      ${total_amount:.2f}")

# Call the main function
if __name__ == "__main__":
    main()
